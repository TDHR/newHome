<div class="page-dashboard">
  <div class="container">
    <div class="row">
      <div class="col-md-2 col-sm-2">
        {{> sidebar}}
      </div>
      <div class="col-md-10 col-sm-10">
        <div class="overview">
          <div class="info">
            <div class="nickname">{{__ 'dashboard-hello'}}{{user.nickName}}</div>
            <div class="assets table-responsive">
              <table class="table table-bordered table-hover">
                <thead>
                  <tr>
                    <th>{{__ 'dashboard-asset-type'}}</th>
                    <th>{{__ 'dashboard-asset-circulation'}}</th>
                    <th>{{__ 'dashboard-asset-holdings'}}</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>RTS</td>
                    <td>11111</td>
                    <td>{{asset.asset}}</td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
        {{#if wallet}}
        <div class="wallet table-responsive">
          {{!-- 认证状态：{{user.certificationStatus}} --}}
          {{!-- 认证成功前，不能操作钱包 --}}
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <td class="text-right" colspan="2">
                  <a href="/user/bind-wallet">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                    绑定钱包
                  </a>
                </td>
              </tr>
              <tr>
                <th>钱包地址</th>
                <th>余额</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>
                  <a href="/wallet/">-</a>
                </td>
                <td>-</td>
              </tr>
            </tbody>
          </table>
        </div>
        {{else}}
        <div class="wallet-less">
          <div class="tips">
            <p>{{__ 'dashboard-wallet-tips1'}}</p>
            <p>{{__ 'dashboard-wallet-tips2'}}</p>
          </div>
        </div>
        {{/if}}
        {{#if bonus.address}}
          <div class="dividend">
            <div class="dividend-title">{{__ 'dashboard-dividend-address'}}</div>
            <div class="table-responsive">
              <table class="table table-bordered table-hover">
                <thead>
                  <tr>
                    <th>{{__ 'dashboard-dividend-currency-type'}}</th>
                    <th>{{__ 'dashboard-dividend-currency-address'}}</th>
                    <th>{{__ 'dashboard-dividend-operating'}}</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>BTC</td>
                    <td>{{bonus.address}}</td>
                    <td>
                      <a href="/user/update-dividend">{{__ 'modify'}}</a>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        {{else}}
          <div class="dividend-less">
            <div class="tips">{{{__ 'dashboard-address-tips'}}}</div>
            <div class="row dividend-address">
              <div class="col-md-6 col-sm-6">
                <div class="box box-green">
                  <i class="glyphicon glyphicon-plus-sign"></i>
                  <p>{{{__ 'dashboard-address-update'}}}</p>
                </div>
              </div>
              <div class="col-md-6 col-sm-6">
                <div class="box box-yellow">
                  <i class="glyphicon glyphicon-hand-right"></i>
                  <p>{{__ 'dashboard-address-signup1'}} <a href="https://haobtc.com/auth/oauth/authorize/?response_type=code&client_id={{haobtcClientId}}">HaoBTC</a> {{__ 'dashboard-address-signup2'}}</p>
                </div>
              </div>
            </div>
          </div>
        {{/if}}
      </div>
    </div>
  </div>
</div>

{{> footer}}
{{> scripts}}
