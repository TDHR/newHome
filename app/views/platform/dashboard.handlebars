<div class="page-dashboard">
  <div class="container">
    <div class="row">
      <div class="col-md-2 col-sm-2">
        {{> sidebar}}
      </div>
      <div class="col-md-10 col-sm-10">
        <div class="overview">
          <div class="info">
            <div class="nickname">Hello, {{user.nickName}}</div>
            <div class="asset">{{__ 'dashboard-total-assets'}}：{{asset.asset}} ABC</div>
          </div>
        </div>
        {{#if wallet}}
        <div class="wallet table-responsive">
          {{!-- 认证状态：{{user.certificationStatus}} --}}
          {{!-- 认证成功前，不能操作钱包 --}}
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <td class="text-right" colspan="2">
                  <a href="/user/bind-wallet">
                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                    绑定钱包
                  </a>
                </td>
              </tr>
              <tr>
                <th>钱包地址</th>
                <th>余额</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>
                  <a href="/wallet/123">aasdsadasdsaddasdasdsadsadsadsadasdsad</a>
                </td>
                <td>1200.01</td>
              </tr>
               <tr>
                <td>
                  <a href="/wallet/123">aasdsadasdsaddasdasdsadsadsadsadasdsad</a>
                </td>
                <td>1200.01</td>
              </tr>
               <tr>
                <td>
                  <a href="/wallet/123">aasdsadasdsaddasdasdsadsadsadsadasdsad</a>
                </td>
                <td>1200.01</td>
              </tr>
            </tbody>
          </table>
        </div>
        {{else}}
        <div class="wallet-less">
          <p>{{__ 'dashboard-wallet-less1'}}</p>
          <p>{{__ 'dashboard-wallet-less2'}}</p>
        </div>
        {{/if}}
        {{#if bonus.address}}
          <div class="dividend">
            <div class="row">
              <div class="col-md-10">{{__ 'dashboard-btc-address'}}（BTC）：{{bonus.address}}</div>
              <div class="col-md-2 text-right">
                <a href="/user/update-dividend">
                  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                  {{__ 'dashboard-btc-modify'}}
                </a>
              </div>
            </div>
          </div>
        {{else}}
          <div class="dividend-less">
            <p>{{{__ 'dashboard-btc-less1'}}}</p>
            <p>{{{__ 'dashboard-btc-less2'}}}</p>
            <p>{{{__ 'dashboard-btc-less3'}}}</p>
          </div>
        {{/if}}
      </div>
    </div>
  </div>
</div>

{{> footer}}
{{> scripts}}
