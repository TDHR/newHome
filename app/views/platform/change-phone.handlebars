<div class="page-change-phone">
  <div class="container">
    <div class="row">
      <div class="col-md-3 col-sm-3">
        {{> sidebar}}
      </div>
      <div class="col-md-9 col-sm-9">
        <ol class="breadcrumb platform-breadcrumb">
          <li><a href="/user/security">{{__ 'sidebar-security-setting'}}</a></li>
          <li class="active">{{__ "change-phone-title"}}</li>
        </ol>
        <form id="form" class="form-normal">
          <div class="form-group">
            <label for="phone">{{__ 'change-phone-new'}}</label>
            <input type="text" class="form-control" id="phoneNumber" name="phoneNumber">
          </div>
          <div class="form-group">
            <div class="row">
              <div class="col-md-7 col-sm-7">
                <label for="phoneValidCode">{{__ "change-phone-sms"}}</label>
                <div class="row">
                  <div class="col-md-6 col-sm-7 col-xs-7">
                    <input type="text" class="form-control" id="phoneValidCode" name="phoneValidCode">
                  </div>
                  <div class="col-md-4 col-sm-4 col-xs-5">
                    <a id="btnSmsCode" class="btn-sms">{{__ "change-phone-get-sms"}}</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="form-group">
            <label for="phone">{{__ 'change-phone-password'}}</label>
            <input type="password" class="form-control" id="password" name="password">
          </div>
          <button id="btnSubmit" type="submit" class="btn btn-primary btn-submit">{{__ 'submit'}}</button>
        </form>
      </div>
    </div>
  </div>
</div>

{{> footer}}
{{> scripts}}
<script src="/scripts/change-phone.js{{fileTail}}"></script>
