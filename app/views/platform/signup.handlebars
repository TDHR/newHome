<div class="page-signup">
  <div class="container">
    <div class="form-big-holder">
      <form class="form-big">
        <div class="form-group">
          <label for="mobile">手机</label>
          <input type="text" class="form-control input-lg" id="mobile">
        </div>
        <div class="form-group">
          <label for="smsCode">短信验证码</label>
          <div class="row">
            <div class="col-md-8 col-sm-8 col-xs-7">
              <input type="text" class="form-control input-lg" id="smsCode">
            </div>
            <div class="col-md-4 col-sm-4 col-xs-5">
              <a id="btnSmsCode" class="btn-sms">获取验证码</a>
            </div>
          </div>
        </div>
        <div class="form-group">
          <label for="password">密码</label>
          <input type="password" class="form-control input-lg" id="password">
        </div>
        <div class="form-group">
          <label for="confirmPassword">确认密码</label>
          <input type="password" class="form-control input-lg" id="confirmPassword">
        </div>
        <div class="form-group">
          <label for="realName">真实姓名</label>
          <input type="text" class="form-control input-lg" id="realName">
        </div>
        <div class="form-group">
          <label for="">证件类型</label>
          <select id="" class="form-control input-lg disabled" disabled>
            <option value="1">身份证</option>
          </select>
        </div>
        <div class="form-group">
          <label for="">证件号码</label>
          <input type="text" class="form-control input-lg" id="">
        </div>
        <div class="form-group">
          <label for="terms">
            <input id="terms" type="checkbox" class="">
            我已阅读并同意瑞资的 <a href="" target="_blank">服务条款</a>
          </label>
        </div>
        <button id="btnSubmit" type="button" class="btn btn-primary btn-lg btn-block btn-submit">注册</button>
      </form>
    </div>
  </div>
</div>

{{> footer}}
{{> scripts}}
<script src="/scripts/login.js{{fileTail}}"></script>