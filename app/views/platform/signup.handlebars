<div class="page-signup">
  <div id="formHolder" class="container">
    <div class="form-title">{{__ 'platform-title'}}</div>
    <div class="form-big-holder">
      <form id="form" class="form-big">
        <div class="form-group">
          <label for="phoneNum">{{__ 'signup-phone'}}</label>
          <input type="text" class="form-control input-lg" id="phoneNum" name="phoneNum">
        </div>
        <div class="form-group">
          <label for="phoneValidCode">{{__ 'signup-sms'}}</label>
          <div class="row">
            <div class="col-md-8 col-sm-8 col-xs-7">
              <input type="text" class="form-control input-lg" id="phoneValidCode" name="phoneValidCode">
            </div>
            <div class="col-md-4 col-sm-4 col-xs-5">
              <a id="btnSmsCode" class="btn-sms">{{__ 'signup-get-sms'}}</a>
            </div>
          </div>
        </div>
        <div class="form-group">
          <label for="password">{{__ 'signup-pwd1'}}</label>
          <input type="password" class="form-control input-lg" id="password" name="password">
        </div>
        <div class="form-group">
          <label for="confirmPassword">{{__ 'signup-pwd2'}}</label>
          <input type="password" class="form-control input-lg" id="confirmPassword">
        </div>
        <div class="form-group">
          <label for="invitationCode">{{__ 'invitation-code'}}</label>
          <input type="text" class="form-control input-lg" id="invitationCode" name="invitationCode" value="{{invite}}" {{#if invite}}readOnly{{/if}}>
          <span class="help-block">{{__ 'optional'}}</span>
        </div>
        <div class="checkbox">
          <label>
            <input id="terms" type="checkbox">
            {{{__ 'signup-terms'}}}
          </label>
        </div>
        <button id="btnSubmit" type="button" class="btn btn-primary btn-lg btn-block btn-submit">{{__ 'signup-register'}}</button>
      </form>
    </div>
  </div>
  <div id="successHolder" class="container hide">
    <div class="layer">
      <div class="layer">
        <div class="layer">
          <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
        </div>
      </div>
    </div>
    <h3>{{__ 'signup-success1'}}</h3>
    <p><span id="jumpCountdown">5</span>{{{__ 'signup-success2'}}}</p>
  </div>
</div>

{{> footer}}
{{> scripts}}
<script src="/scripts/signup.js{{fileTail}}"></script>
