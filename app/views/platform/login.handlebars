<div class="page-login">
  <div class="container">
    <div class="form-big-holder">
      <form class="form-big">
        <div class="form-group">
          <label for="mobile">{{__ 'login-phone'}}</label>
          <input type="text" class="form-control input-lg" id="mobile">
        </div>
        <div class="form-group">
          <label for="password">{{__ 'login-pwd'}}</label>
          <input type="password" class="form-control input-lg" id="password">
        </div>
        <div id="captchaHolder" class="form-group hide">
          <label for="captcha">{{__ 'login-captcha'}}</label>
          <div class="row">
            <div class="col-md-9 col-sm-9 col-xs-7">
              <input type="text" class="form-control input-lg" id="captcha">
            </div>
            <div class="col-md-3 col-sm-3 col-xs-5">
              <img id="captchaImg" class="cpptcha-img" src="about:blank">
            </div>
          </div>
        </div>
        <button id="btnSubmit" type="button" class="btn btn-primary btn-lg btn-block btn-submit">{{__ 'login-submit'}}</button>
        <div class="form-help">
          <a href="/reset">{{__ 'login-forget'}}</a>
        </div>
      </form>
    </div>
  </div>
</div>

{{> footer}}
{{> scripts}}
<script src="/scripts/login.js{{fileTail}}"></script>
