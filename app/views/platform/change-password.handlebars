<div class="page-change-password">
  <div class="container">
    <div class="row">
      <div class="col-md-3 col-sm-3">
        {{> sidebar}}
      </div>
      <div class="col-md-9 col-sm-9">
        <ol class="breadcrumb platform-breadcrumb">
          <li><a href="/user/security">{{__ 'sidebar-security-setting'}}</a></li>
          <li class="active">{{__ "change-password-title"}}</li>
        </ol>
        <form id="form" class="form-normal">
          <div class="form-group">
            <label for="oldPassword">{{__ 'change-password-current'}}</label>
            <input type="password" class="form-control" id="oldPassword" name="oldPassword">
          </div>
          <div class="form-group">
            <label for="newPassword">{{__ 'change-password-new'}}</label>
            <input type="password" class="form-control" id="newPassword" name="newPassword">
          </div>
          <div class="form-group">
            <label for="confirmPassword">{{__ 'change-password-confirm'}}</label>
            <input type="password" class="form-control" id="confirmPassword">
          </div>
          <button id="btnSubmit" type="submit" class="btn btn-primary btn-submit">{{__ 'submit'}}</button>
        </form>
      </div>
    </div>
  </div>
</div>

{{> footer}}
{{> scripts}}
<script src="/scripts/change-password.js{{fileTail}}"></script>
