<div class="page-explorer-block">
  <div class="container">
    <div class="title">块基本信息</div>
    <div class="block-info">
      <div class="row">
        <div>
          <span>块ID：</span>{{info.hash}}
        </div>
        <div>
          <span>块高度：</span>{{info.height}}
        </div>
        <div>
          <span>打包时间：</span>{{info.time}}
        </div>
        <div>
          <span>块大小：</span>{{info.size}}
        </div>
        <div>
          <span>版本号：</span>{{info.version}}
        </div>
        <div>
          <span>上一个块ID：</span><a href="/explorer/block/{{info.previousblockhash}}">{{info.previousblockhash}}</a>
        </div>
        <div>
          <span>下一个块ID：</span><a href="/explorer/block/{{info.nextblockhash}}">{{info.nextblockhash}}</a>
        </div>
      </div>
    </div>
  <div class="transactions-list">
    <h4>{{__ 'explorer-user-transactions'}}</h4>
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead>
        <tr>
          <th>{{__ 'explorer-user-transactions-id'}}</th>
          <th>{{__ 'explorer-user-transactions-date'}}</th>
          <th>{{__ 'explorer-user-transactions-quantity'}}</th>
        </tr>
        </thead>
        <tbody>
        {{#if tx.list}}
          {{#each tx.list}}
            <tr>
              <td><a href="/explorer/tx/{{this.txid}}">{{this.txid}}</a></td>
              <td>{{dateFormat this.time 'default' 'unix'}}</td>
              <td>{{this.amount}}</td>
            </tr>
          {{/each}}
        {{else}}
          <tr>
            <td class="text-center" colspan="6">{{__ 'no-data'}}</td>
          </tr>
        {{/if}}
        </tbody>
      </table>
    </div>
    {{#ifCond tx.pageCount '>' 1}}
      <div id="paginationHolder" class="pagination-holder" data-total={{tx.pageCount}} data-current= "{{pageIndex}}"></div>
    {{/ifCond}}
  </div>
</div>
</div>

{{> footer}}
{{> scripts}}
<script src="/libs/jquery.bootpag.js"></script>
<script src="/scripts/explorer-block.js{{fileTail}}"></script>
