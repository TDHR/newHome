<div class="page-explorer-user">
  <div class="container">
    <ol class="breadcrumb">
      <li><a href="/explorer/asset/{{assetId}}">首页</a></li>
      <li class="active">持仓人详情</li>
    </ol>
    <div class="user-info">
      <div class="row">
        <div class="col-md-4 col-sm-4 col-xs-6">
          <span>持仓人ID：</span>{{user.userId}}
        </div>
        <div class="col-md-4 col-sm-4 col-xs-6">
          <span>真实姓名：</span>{{handleText user.realName "2"}}
        </div>
        <div class="col-md-4 col-sm-4 col-xs-6">
          <span>持有量：</span>{{user.balance}}
        </div>
        <div class="col-md-4 col-sm-4 col-xs-6">
          <span>持仓排名：</span>{{user.topIndex}}
        </div>
        <div class="col-md-4 col-sm-4 col-xs-6">
          <span>持仓占比：</span>{{user.holdRate}}
        </div>
      </div>
    </div>
    <div class="wallet-list">
      <h4>钱包</h4>
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>地址</th>
              <th>余额</th>
            </tr>
          </thead>
          <tbody>
            {{#if wallet.list}}
              {{#each wallet.list}}
              <tr>
                <td>{{this.address}}</td>
                <td>{{this.balance}}</td>
              </tr>
              {{/each}}
            {{else}}
            <tr>
              <td class="text-center" colspan="6">暂无数据</td>
            </tr>
            {{/if}}
          </tbody>
        </table>
      </div>
    </div>
    <div class="dividend-list">
      <h4>分红记录</h4>
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>类型</th>
              <th>数量</th>
              <th>交易记录</th>
              <th>时间</th>
            </tr>
          </thead>
          <tbody>
            {{#if dividend}}
              {{#each dividend}}
              <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
              </tr>
              {{/each}}
            {{else}}
            <tr>
              <td class="text-center" colspan="6">暂无数据</td>
            </tr>
            {{/if}}
          </tbody>
        </table>
      </div>
    </div>
    <div class="transactions-list">
      <h4>交易 / <span class="count">共{{tx.count}}次</span></h4>
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>交易ID</th>
              <th>数量</th>
              <th>时间</th>
            </tr>
          </thead>
          <tbody>
            {{#if tx.list}}
              {{#each tx.list}}
              <tr>
                <td><a href="/explorer/asset/{{../assetId}}/tx/{{this.txId}}">{{this.txId}}</a></td>
                <td>{{this.value}}</td>
                <td>{{dateFormat this.time 'default' 'unix'}}</td>
              </tr>
              {{/each}}
            {{else}}
            <tr>
              <td class="text-center" colspan="6">暂无数据</td>
            </tr>
            {{/if}}
          </tbody>
        </table>
      </div>
      {{#ifCond tx.pageCount '>' 1}}
        <div id="paginationHolder" class="pagination-holder" data-total={{tx.pageCount}} data-current={{tx.pageIndex}}></div>
      {{/ifCond}}
    </div>
  </div>
</div>

{{> footer}}
{{> scripts}}
<script src="/libs/jquery.bootpag.js"></script>
<script src="/scripts/explorer-user.js{{fileTail}}"></script>
