<div class="page-article">
  <div class="container">
    <div class="row">
      <div class="col-md-1"></div>
      <div class="col-md-10">
        {{#if data.title}}
        <div class="article">
          <div class="cover">
            <img src="{{data.cover}}">
          </div>
          <div class="title">{{data.title}}</div>
          <div class="date">{{dateFormat data.date 'unix'}}</div>
          <div class="summary">{{__ 'article-summary'}}{{data.summary}}</div>
          <div class="content">{{{data.content}}}</div>
        </div>
        {{else}}
        <div class="notice">{{__ 'article-not-exist'}}</div>
        {{/if}}
      </div>
    </div>
  </div>
</div>

{{> footer}}
{{> scripts}}